// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Review {
  id             String   @id @default(cuid())
  title          String
  restaurantName String
  slug           String   @unique
  excerpt        String
  content        String
  rating         Float
  coverImage     String
  images         String   // JSON array stored as string
  address        String
  lat            Float
  lng            Float
  cuisines       String   // JSON array stored as string
  vibes          String   // JSON array stored as string
  foodTypes      String   // JSON array stored as string
  favoriteDishes String   // JSON array stored as string
  author         String   @default("Lee")
  publishedAt    DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

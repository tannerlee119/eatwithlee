// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Review {
  id             String   @id @default(cuid())
  contentType    String   @default("review") // "review" or "list"
  isDraft        Boolean  @default(false) // true for drafts, false for published
  title          String
  restaurantName String
  slug           String   @unique
  excerpt        String
  content        String
  rating         Float
  coverImage     String
  coverImageCrop String?  // JSON object stored as string {x, y, zoom}
  images         String   // JSON array stored as string
  address        String
  lat            Float
  lng            Float
  locationTag    String   @default("") // e.g. "Seattle", "Capitol Hill", etc.
  website        String   @default("") // Restaurant website URL
  instagram      String   @default("") // Restaurant Instagram handle or URL
  priceRange     Int      @default(2) // 1-4 dollar signs (1=$, 2=$$, 3=$$$, 4=$$$$)
  cuisines       String   // JSON array stored as string
  vibes          String   // JSON array stored as string
  foodTypes        String   // JSON array stored as string
  favoriteDishes   String   // JSON array stored as string
  leastFavoriteDishes String @default("[]") // JSON array stored as string
  author           String   @default("Lee")
  publishedAt    DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
